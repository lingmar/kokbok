#!/usr/bin/env python3

import os, os.path
import sys
sys.path.append(os.path.abspath(os.path.join(os.path.dirname(__file__),'..')))

import MySQLdb

from kokbok import conf
from kokbok import model

def main():
    
    
    ingredient = model.Ingredient("Test", 1, 2, 3, 4, 5, 6, 7)
    ing_list = model.IngredientList([ingredient], "TestList")

    recipe = model.Recipe("TestRecipe", 1, 2,
                 3, 4, 5, [ing_list],
                 6, 7, 8, 9)
    recipe.save()
    
    #ing_list.link_to_recipe(recipe)
    ing_list.save()
    
if __name__ == '__main__':
    main()
